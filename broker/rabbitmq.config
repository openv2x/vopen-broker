[
    { rabbit, [
        { auth_backends, [ rabbit_auth_backend_http ] },
        { loopback_users, [ ] },
        { tcp_listeners, [ 5672 ] },
        { ssl_listeners, [ ] },
        { default_user, <<"vopen">> },
        { default_pass, <<"admin">> },
        { hipe_compile, false }
    ] },
    { rabbitmq_management, [ { listener, [
        { port, 15672 },
        { ssl, false }
    ] } ] },
    { rabbitmq_auth_backend_http, [
        { http_method,   post },
        { user_path,     "http://127.0.0.1:3000/auth/user" },
        { vhost_path,    "http://127.0.0.1:3000/auth/vhost" },
        { resource_path, "http://127.0.0.1:3000/auth/resource" },
        { topic_path,    "http://127.0.0.1:3000/auth/topic" }
    ] }
].